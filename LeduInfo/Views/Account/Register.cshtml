@model LeduInfo.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<link href="@Url.Content("../../Content/login-reg.css")" rel="stylesheet" type="text/css" />
<div class="container">
@using (Html.BeginForm((string)ViewBag.FormAction, "Account", FormMethod.Get, new { @class = "form-signin" }))
{
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")

    <fieldset>
        <legend>Registration Form</legend>
        <ol class="unstyled">
            <li>

                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "input-block-level", @placeholder = "User Name" })
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "input-block-level", @placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.Email)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.TextBoxFor(m => m.Password, new { @class = "input-block-level", @placeholder = "Password", @type = "password" })
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.TextBoxFor(m => m.Password, new { @class = "input-block-level", @placeholder = "Password", @type = "password" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <input class="btn btn-primary" type="submit" value="Register" />
    </fieldset>
}

</div>
